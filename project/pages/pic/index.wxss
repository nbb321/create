/* pages/pic/index.wxss */
page{
  width:100%;
  height:100%;
}
.pic{
  width:100%;
  height:100%;
  position:fixed;
  left:0;
  top:0;
  bottom:0;
  right:0;
}
.mask{
   width:100%;
   height:100%;
   background:rgba(0,0,0,0.3);
   z-index:90;
   position:fixed;
   left:0;
   top:0;
   right:0;
   bottom:0;
}
.btn{
  width:320rpx;
  height:80rpx;
  background:#fff;
  line-height:80rpx;
  text-align:center;
  position: fixed;
  left:50%;
  bottom:10%;
  margin-left:-160rpx;
  margin-top:-40rpx;
  z-index:100;
  border-radius:30rpx;
}