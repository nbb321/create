/* pages/home/home.wxss */
.swiper{
  width:100%;
  height:360rpx;
}
.swiper image{
  width:100%;
  height:360rpx;
}
.search{
  width:100%;
  height:100rpx;
  display:flex;
  justify-content: space-around;
  align-items: center;
}
.search input{
  width:450rpx;
  height:80rpx;
  line-height:80rpx;
  text-align: center;
  background:#eee;
  border-radius:20rpx;
  font-size:14px;
}
.list{
  width:100%;
  height:800rpx;
  display:flex;
  overflow-y: scroll;
  justify-content: space-around;
  flex-wrap:wrap;
}
.items{
  width:33%;
  height:350rpx;
}
.pic{
  width:90%;
  height:250rpx;
  border-radius:10rpx;
  border:4rpx solid #eee;
}
.type,.price{
  padding-left:20rpx;
  color:#AF8E1B;
  font-size:14px;
}
